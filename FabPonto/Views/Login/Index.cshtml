@{
    ViewBag.Title = "Login";
}

<article class="col col-md-12 clearfix" style="text-align:center">
    <fieldset>
        <div class="col-md-4 col-md-offset-4">
            <h2>Informações da Conta</h2>
            <form action="@Url.Action("Login", "Login")" method="post">
                @Html.ValidationSummary(true, "")
                <div class="form-group">
                    <div class="col-md-12">
                        @Html.Label("Nome de usuário")
                    </div>
                    <div class="col-md-12">
                        @Html.TextBox("nomeUsuario", null, new { @class = "form-control" })
                    </div>
                </div>
                <div class="form-group">
                    <div class="col-md-12">
                        @Html.Label("Senha")
                    </div>
                    <div class="col-md-12">
                        @Html.Password("senhaUsuario", null, new { @class = "form-control" })
                    </div>
                </div>
                <div class="col-md-12" style="margin-top: 10px;">
                    <input type="submit" value="Login" name="submitLogin"class="btn btn-sm btn-success btn-block" />
                </div>
            </form>
            @Html.ActionLink("Registrar", "Register", "User")
        </div>
    </fieldset>
</article>