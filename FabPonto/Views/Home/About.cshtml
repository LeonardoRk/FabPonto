@{
    ViewBag.Title = "About";
}
<h2>@ViewBag.Title.</h2>
<h3>@ViewBag.Message</h3>

<p>Use this area to provide additional information.</p>

<table id="myTable"></table>

<script>
    $(document).ready(function () {
        $('#myTable').dataTable({
            serverSide: true,
            ajax: "/home/pagedata",
            columns: [
                {
                    name: 'id',
                    data: 'id',
                    title: "Id",
                    sortable: false,
                    searchable: false
                },
                {
                    name: 'name',
                    data: "name",
                    title: "Name",
                    sortable: false,
                    searchable: false
                }
            ]
        });
    });
</script>